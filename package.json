{
  "name": "chat-layout-js",
  "version": "0.1.0",
  "description": "WebComponent to implement chat UI features in an easy and fast way",
  "main": "index.js",
  "repository": "https://github.com/AlexVanHell/ChatLayoutJS.git",
  "author": "alexvanhell <alejandrodnl.cv@hotmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "webpack": "webpack",
    "prebuild": "rimraf _bundles lib lib-esm",
    "build:lib": "tsc -m es6 --outDir lib-esm",
    "build": "tsc && npm run build:lib && webpack",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "webpack",
    "start:dev": "webpack-dev-server",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "preact": "^10.4.4",
    "prop-types": "^15.7.2",
    "rxjs": "^6.5.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node-sass": "^4.11.1",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.41",
    "css-loader": "^3.6.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.9",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^react$": "preact/compat",
      "^react-dom/test-utils$": "preact/test-utils",
      "^react-dom$": "preact/compat"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run lint",
      "npm run format",
      "git add ./**/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
