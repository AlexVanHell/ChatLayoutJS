{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["./src/"],
  "exclude": [
    "./node_modules/",
    "./lib/",
    "./lib-esm/",
    "./_bundles/",
    "./test/"
  ]
}
